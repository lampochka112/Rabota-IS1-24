<script>
  // –°–æ–∑–¥–∞–µ–º —Å–ª—É—á–∞–π–Ω—ã–µ –∑–≤–µ–∑–¥–æ—á–∫–∏ –¥–ª—è –º–∏–ª–æ–≥–æ —ç—Ñ—Ñ–µ–∫—Ç–∞
  const starsContainer = document.getElementById('stars-container');

  for (let i = 0; i < 30; i++) {
    const star = document.createElement('div');
    star.className = 'star';
    star.style.top = Math.random() * 100 + '%';
    star.style.left = Math.random() * 100 + '%';
    star.style.width = star.style.height = (Math.random() * 4 + 4) + 'px'; // 4-8px
    star.style.opacity = Math.random() * 0.5 + 0.3; // 0.3-0.8
    star.style.animationDelay = (Math.random() * 2) + 's';
    star.style.setProperty('--opacity', star.style.opacity);
    starsContainer.appendChild(star);
  }

  // –ê–Ω–∏–º–∞—Ü–∏—è –º–µ—Ä—Ü–∞–Ω–∏—è –∑–≤–µ–∑–¥
  const styleSheet = document.createElement('style');
  styleSheet.innerHTML = `
    @keyframes twinkle {
      0%, 100% { opacity: var(--opacity); }
      50% { opacity: 0.1; }
    }
  `;
  document.head.appendChild(styleSheet);
</script>
