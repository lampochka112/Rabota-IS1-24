<section id="reviews">
    <h2>Отзывы и комментарии</h2>
    <div id="reviews-toggle">Показать отзывы</div>
    <div id="reviews-list"></div>
    <div id="add-review-section" style="margin-top:20px;">
        <h3>Добавить отзыв</h3>
        <form id="add-review-form">
            <input type="text" id="reviewer-name" placeholder="Ваше имя" required />
            <select id="review-rating" required>
                <option value="">Оцените (звезды)</option>
                <option value="1">1 ★</option>
                <option value="2">2 ★★</option>
                <option value="3">3 ★★★</option>
                <option value="4">4 ★★★★</option>
                <option value="5">5 ★★★★★</option>
            </select>
            <textarea id="review-text" rows="3" placeholder="Ваш отзыв" required></textarea>
            <button type="submit">Добавить отзыв</button>
        </form>
    </div>
</section>

<script>
    // Массив отзывов
    const reviews = [
        {name: "Алексей", text: "Отличный специалист, рекомендую!", rating: 5},
        {name: "Мария", text: "Работает быстро и качественно.", rating: 4},
        {name: "Иван", text: "Очень профессионально и ответственно.", rating: 5},
        {name: "Сергей", text: "Респект!", rating: 4},
        {name: "Ольга", text: "Рекомендую всем!", rating: 5}
    ];

    const reviewsContainer = document.getElementById('reviews-list');
    const toggleButton = document.getElementById('reviews-toggle');

    // Функция для отображения отзывов
    function renderReviews() {
        reviewsContainer.innerHTML = '';
        reviews.forEach(review => {
            const reviewDiv = document.createElement('div');
            reviewDiv.style.marginBottom = '15px';

            // Звезды
            let stars = '';
            for (let i=0; i<review.rating; i++) {
                stars += '★';
            }
            for (let i=review.rating; i<5; i++) {
                stars += '☆';
            }

            reviewDiv.innerHTML = `
                <p><strong>${review.name}:</strong> ${review.text}</p>
                <div class="stars">${stars}</div>
            `;
            reviewsContainer.appendChild(reviewDiv);
        });
    }

    // Изначально скрываем отзывы
    document.getElementById('reviews').querySelector('#reviews-toggle').addEventListener('click', () => {
        if (reviewsContainer.classList.toggle('show')) {
            toggleButton.textContent = 'Скрыть отзывы';
        } else {
            toggleButton.textContent = 'Показать отзывы';
        }
    });

    // Обработчик добавления нового отзыва
    document.getElementById('add-review-form').addEventListener('submit', (e) => {
        e.preventDefault();
        const name = document.getElementById('reviewer-name').value;
        const text = document.getElementById('review-text').value;
        const rating = parseInt(document.getElementById('review-rating').value);

        // Добавляем отзыв в массив
        reviews.push({name, text, rating});

        // Обновляем отображение
        renderReviews();

        // Очистка формы
        document.getElementById('add-review-form').reset();

        // Открываем отзывы, если они были скрыты
        if (!reviewsContainer.classList.contains('show')) {
            reviewsContainer.classList.add('show');
            toggleButton.textContent = 'Скрыть отзывы';
        }
    });

    // Изначально показываем отзывы
    renderReviews();
</script>

